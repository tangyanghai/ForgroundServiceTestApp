<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_turn_on_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Turn On Push"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_turn_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="35dp"
        android:text="Turn Off Push"
        app:layout_constraintEnd_toEndOf="@+id/btn_turn_on_push"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_turn_on_push"
        app:layout_constraintTop_toBottomOf="@+id/btn_turn_on_push" />

    <Button
        android:id="@+id/btn_check_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Check Connect"
        app:layout_constraintStart_toStartOf="@+id/btn_turn_on_push"
        app:layout_constraintTop_toBottomOf="@+id/btn_turn_off" />

    <Button
        android:id="@+id/btn_check_regid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Check RegId"
        app:layout_constraintStart_toStartOf="@+id/btn_turn_on_push"
        app:layout_constraintTop_toBottomOf="@+id/btn_check_connect" />

    <Button
        android:id="@+id/btn_auto_check_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Auto Check Connect"
        app:layout_constraintStart_toStartOf="@+id/btn_turn_on_push"
        app:layout_constraintTop_toBottomOf="@+id/btn_check_regid" />

</android.support.constraint.ConstraintLayout>